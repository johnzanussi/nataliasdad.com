---
import { Image as AstroImage, type ImgAttributes } from 'astro:assets';

interface Props extends ImgAttributes {
    width: number;
    includeShadow?: boolean;
};

const {
    width,
    class: className = '',
    hideShadow = false,
    ...props
} = Astro.props;

const imgProps = {
    style: {
        '--img-width': `${width}px`,
    },
    ...props,
};
---

<AstroImage
    class:list={[
        'inline-block w-2/3 sm:w-(--img-width)',
        {
            'rounded-lg shadow-lg': !hideShadow,
        },
        className,
    ]}
    {...imgProps}
/>