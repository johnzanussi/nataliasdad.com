					fav="pig"
				/>

				<Bio
					name="alexandra"
					emoji="💗"
					color="purple"
					fav="dolphin"
				/>

				<Bio
					name="nick"
					emoji="🇺🇸"
					color="lightblue"
					fav="elk"
				/>

				<Bio
					name="camden"
					emoji="🥹"
					color="blue"
					fav="kingfisher"
				/>

				<Bio
					name="mrs caracciola"
					emoji="☺️"
					color="black"
					fav="pig"
